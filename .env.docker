# =========================================
# Docker Environment Configuration
# =========================================
# This file contains environment variables for docker-compose
# Copy to .env.docker for local customization

# Application
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
POSTGRES_DB=cicd_analyzer
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev-password-change-in-production

POSTGRES_TEST_DB=cicd_analyzer_test
POSTGRES_TEST_USER=test_user
POSTGRES_TEST_PASSWORD=test_password

# Redis Configuration
REDIS_PASSWORD=dev-redis-password

# Port Mappings (change if ports are already in use)
APP_PORT=3000
APP_DEBUG_PORT=9229
POSTGRES_PORT=5432
POSTGRES_TEST_PORT=5433
REDIS_PORT=6379
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# Security (Development Only - Change in Production)
JWT_SECRET=dev-jwt-secret-change-in-production-minimum-32-characters-long
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-minimum-32-characters-long
API_KEY_SECRET=dev-api-key-secret-change-in-production-minimum-32-characters-long
