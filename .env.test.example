# ===============================================
# CI/CD Pipeline Analyzer - Test Environment Variables
# Copy to .env.test for testing
# ===============================================

# Test Environment
NODE_ENV=test
LOG_LEVEL=error

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=3000

# Security Configuration
JWT_SECRET=test-jwt-secret-that-is-at-least-32-characters-long-for-security
JWT_EXPIRES_IN=1h
CORS_ORIGIN=http://localhost:3000

# Database Configuration - Use cloud provider or local install
# Option 1: Use Supabase (free tier) - create project at https://supabase.com
DATABASE_HOST=db.xxxxxxxxxxxxxx.supabase.co
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-supabase-password
DATABASE_SSL=true

# Option 2: Use Railway (free tier) - create project at https://railway.app
# DATABASE_HOST=containers-us-west-xxx.railway.app
# DATABASE_PORT=5432
# DATABASE_NAME=railway
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=your-railway-password
# DATABASE_SSL=true

# Option 3: Use local PostgreSQL installation
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=cicd_analyzer_test
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=your-local-password
# DATABASE_SSL=false

# Redis Configuration - Use cloud provider or disable
# Option 1: Use Upstash (free tier) - create database at https://upstash.com
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-upstash-password

# Option 2: Disable Redis features for testing
# REDIS_MOCK=true
# FEATURE_CACHING=false

# Provider test config
GITHUB_APP_ID=test-github-app-id
GITHUB_PRIVATE_KEY=test-github-private-key
GITHUB_WEBHOOK_SECRET=test-github-webhook-secret

# Feature flags for tests
FEATURE_CACHING=false
FEATURE_RATE_LIMITING=false
FEATURE_COMPRESSION=false
FEATURE_HELMET_SECURITY=false

# Disable performance monitoring in tests
ENABLE_METRICS=false
PERFORMANCE_MONITORING=false
