# ===============================================
# CI/CD Pipeline Analyzer - Environment Variables
# ===============================================

# Application Environment
NODE_ENV=development
LOG_LEVEL=info

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=3000
SERVER_TIMEOUT=30000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cicd_analyzer
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=cicd:
REDIS_DEFAULT_TTL=3600

# GitHub Provider Configuration
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# GitLab Provider Configuration
GITLAB_TOKEN=
GITLAB_WEBHOOK_SECRET=your-webhook-secret

# Jenkins Provider Configuration
JENKINS_URL=
JENKINS_USERNAME=
JENKINS_TOKEN=

# Azure DevOps Provider Configuration
AZURE_PERSONAL_ACCESS_TOKEN=
AZURE_ORGANIZATION=

# CircleCI Provider Configuration
CIRCLECI_TOKEN=

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
PERFORMANCE_MONITORING=true

# Feature Flags
FEATURE_CACHING=true
FEATURE_RATE_LIMITING=true
FEATURE_COMPRESSION=true
FEATURE_HELMET_SECURITY=true

# External Services
WEBHOOK_TIMEOUT=5000
API_TIMEOUT=10000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
