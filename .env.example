# CI/CD Pipeline Analyzer - Environment Configuration

# === Application Configuration ===
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# === Database Configuration ===
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cicd_analyzer
DB_USERNAME=postgres
DB_PASSWORD=your_db_password
DB_SSL=false
DB_POOL_SIZE=10

# === Redis Configuration ===
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TTL=3600

# === Authentication Configuration ===
# IMPORTANT: Generate a secure 32+ character secret for production
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# === CORS Configuration ===
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# === Security Configuration ===
RATE_LIMITING=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# === Module Configuration ===
MODULES_ENABLED=github-actions,gitlab-ci,jenkins
CACHING_ENABLED=true
CACHING_STRATEGY=lru
CACHING_MAX_SIZE=10000

# === Monitoring Configuration ===
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=false
LOG_LEVEL=info
LOG_FORMAT=json
# LOG_FILE=logs/app.log

# === Provider Configuration - GitHub Actions ===
# GITHUB_TOKEN=your_github_personal_access_token
# GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# === Provider Configuration - GitLab CI ===
# GITLAB_TOKEN=your_gitlab_access_token
# GITLAB_BASE_URL=https://gitlab.com/api/v4
# GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret

# === Provider Configuration - Jenkins ===
# JENKINS_URL=https://your-jenkins-instance.com
# JENKINS_USERNAME=your_jenkins_username
# JENKINS_TOKEN=your_jenkins_api_token
